[
  {
    "namespace": "folderChange",
    "functions": [
      {
        "name": "setVersion",
        "type": "function",
        "description": "Set the TB version.",
        "async": true,
        "parameters": [
          {
            "type": "integer",
            "name": "version",
            "minimum": 0,
            "maximum": 999
          }
        ]
      },
      {
        "name": "setCountType",
        "type": "function",
        "description": "Set the count type.",
        "async": true,
        "parameters": [
          {
            "type": "integer",
            "name": "type",
            "minimum": 0,
            "maximum": 1
          }
        ]
      },
      {
        "name": "setFilters",
        "type": "function",
        "description": "Set the account filters.",
        "async": true,
        "parameters": [
          {
            "name": "filters",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "unread": {
                  "type": "boolean"
                },
                "folder": {
                  "type": "object",
                  "properties": {
                    "accountName": {
                      "type": "string"
                    },
                    "accountId": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "path": {
                      "type": "string"
                    },
                    "version": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        ]
      }
    ],
    "events": [
      {
        "name": "onUnreadMailChange",
        "type": "function",
        "description": "Fires when there is a change in the number of unread mails.",
        "parameters": [
          {
            "name": "unread",
            "type": "integer"
          }
        ]
      },
      {
        "name": "onFolderChange",
        "type": "function",
        "description": "Fires when there is a folder added or removed.",
        "parameters": [
          {
            "name": "rootFolder",
            "type": "string"
          },
          {
            "name": "parentFolder",
            "type": "string"
          },
          {
            "name": "folder",
            "type": "string"
          },
          {
            "name": "added",
            "type": "boolean"
          }
        ]
      }
    ]
  }
]
